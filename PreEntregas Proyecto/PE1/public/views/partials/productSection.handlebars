<h3 class="sectionTitle">Productos</h3>
<div class="productSection" id="productSection">
  {{#if products.length}}
    {{#each products}}
      <div class="card">
        <div class="card__header">
          <div class="card__header--name">
            {{this.name}}
          </div>
        </div>
        <div class="card__image">
          <img src={{this.thumbnail}} alt="" class="card__image--thumbnail" />
        </div>
        <div class="card__information">
          <div class="card__information--description">
            {{this.description}}

          </div>
          <div class="card__information--price">
            ${{this.price}}
          </div>
        </div>
        <div class="card__footer">
          stock:
          {{this.stock}}
        </div>
      </div>
    {{/each}}
  {{else}}
    <h3>actualmente no hay productos en el sistema</h3>
  {{/if}}
</div>