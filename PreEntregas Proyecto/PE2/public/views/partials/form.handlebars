<div class="sectionContainer">
    <h3 class="sectionTitle">Ingresar Producto</h3>
    <form id="form">

        <div class="contenedorInput">
            <label class="formLabel">Ingrese el Id en caso de Delete o Update</label>
            <input class="formInput" type="text" placeholder="id del producto" id="idProduct" name="idProduct">
        </div>
        <div class="contenedorInput">
            <label class="formLabel">Ingrese el nombre</label>
            <input class="formInput" type="text" placeholder="nombre" id="name" name="name">
        </div>
        <div class="contenedorInput">
            <label class="formLabel">Ingrese la descripción</label>
            <input class="formInput" type="text" placeholder="descripción" id="description" name="description">
        </div>
        <div class="contenedorInput">
            <label class="formLabel">Ingrese el código</label>
            <input class="formInput" type="text" placeholder="código" id="code" name="code">
        </div>
        <div class="contenedorInput">
            <label class="formLabel">Ingrese la url de la imágen</label>
            <input class="formInput" type="text" placeholder="url de imágen" id="thumbnail" name="thumbnail">
        </div>
        <div class="contenedorInput">
            <label class="formLabel">Ingrese el precio</label>
            <input class="formInput" type="number" placeholder="precio" min="0" id="price" name="price">
        </div>
        <div class="contenedorInput">
            <label class="formLabel">Ingrese el stock</label>
            <input class="formInput" type="number" placeholder="stock" min="0" id="stock" name="stock">
        </div>
        <button class="btn__submit" id="btn__addProduct">Add Product</button>
        <button class="btn__submit" id="btn__updateProduct">Update Product</button>
        <button class="btn__submit" id="btn__deleteProduct">Delete Product</button>

    </form>
</div>